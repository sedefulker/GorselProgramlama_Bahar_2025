<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="Odev2App.RenkPage"
             Title="Renk Seçici">
    <VerticalStackLayout Padding="20" Spacing="10" x:Name="anaLayout">
        <Label Text="Kırmızı:" />
        <Slider x:Name="redSlider" Maximum="255" ValueChanged="OnColorChanged"/>
        <Label x:Name="redLabel" />

        <Label Text="Yeşil:" />
        <Slider x:Name="greenSlider" Maximum="255" ValueChanged="OnColorChanged"/>
        <Label x:Name="greenLabel" />

        <Label Text="Mavi:" />
        <Slider x:Name="blueSlider" Maximum="255" ValueChanged="OnColorChanged"/>
        <Label x:Name="blueLabel" />

        <Label x:Name="colorCodeLabel" FontAttributes="Bold" FontSize="18"/>

        <HorizontalStackLayout>
            <Button Text="Kopyala" Clicked="OnCopyClicked"/>
            <Button Text="Rastgele Renk" Clicked="OnRandomClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>