<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProgramlamaOdev2.BMICalculatorPage">
    <StackLayout Padding="20" BackgroundColor="Black">
        <Label Text="Vücut Kitle İndeksi (VKİ)" FontSize="24" HorizontalOptions="Center" TextColor="White" />
        <Slider x:Name="WeightSlider" Minimum="10" Maximum="200" ValueChanged="OnWeightChanged" />
        <Label x:Name="WeightLabel" Text="Kilo: 70 kg" FontSize="18" TextColor="Gray" />
        <Slider x:Name="HeightSlider" Minimum="50" Maximum="250" ValueChanged="OnHeightChanged" />
        <Label x:Name="HeightLabel" Text="Boy: 170 cm" FontSize="18" TextColor="Gray" />
        <Label x:Name="BMIResultLabel" Text="VKİ: Hesaplanıyor..." FontSize="18" HorizontalOptions="Center" TextColor="LightGreen" />
    </StackLayout>
</ContentPage>